<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:gravity="center"
android:orientation="vertical"
android:background="#f1fff1"
tools:context=".myselfInfo" >

<ScrollView
    android:id="@+id/scrollView1"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/myself_image"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:src="@drawable/nahid"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="মোঃ নাহিদ হোসেন"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="@color/green"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/developer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="এন্ড্রয়েড ডেভেলপার"
            android:textSize="20dp"
            android:textStyle="italic"
            android:textColor="@color/red"
            android:layout_gravity="center" />
        <TextView
            android:id="@+id/info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="মোবাইল: ০১৭৫০-৮০০৪৪৭ \nই-মেইল: nahid.cse.iu24@gmail.com\n"
            android:textSize="16dp"
            android:layout_gravity="center"
            android:gravity="center"/>





    </LinearLayout>
</ScrollView>

</RelativeLayout>
