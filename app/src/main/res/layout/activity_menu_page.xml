<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#f1fff1"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MenuPage" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical" >


            <Button
                android:id="@+id/kushtia_town_btn"
                android:text="কুষ্টিয়া শহর"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:layout_margin="7dp"
                android:textStyle="bold"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/buttonshape"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:onClick="kushtiaTown"/>


            <Button
                android:id="@+id/ourTradition_btn"
                android:text="আমাদের ঐতিহ্য"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:layout_margin="7dp"
                android:textStyle="bold"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/buttonshape"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:onClick="ourTradition"/>
            <Button
                android:id="@+id/ourCulture_btn"
                android:text="আমাদের সংস্কৃতি"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:layout_margin="7dp"
                android:textStyle="bold"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/buttonshape"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:onClick="ourCulture"/>

            <Button
                android:id="@+id/myself_btn"
                android:text="আমার সম্পর্কে"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:layout_margin="7dp"
                android:textStyle="bold"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/buttonshape"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:onClick="me"/>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
