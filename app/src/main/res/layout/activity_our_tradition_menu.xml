<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:gravity="center"
android:orientation="vertical"
android:background="#f1fff1"
tools:context=".ourTraditionMenu" >

<ScrollView
    android:id="@+id/scrollView1"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical" >


        <Button
            android:id="@+id/fokirLalon_btn"
            android:text="ফকীর লালন শাঁহ"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:layout_margin="7dp"
            android:textStyle="bold"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/buttonshape"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:onClick="fokirLalon"
             />


        <Button
            android:id="@+id/mirMosharrofHossain_btn"
            android:text="মীর মশাররফ হোসেন"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:layout_margin="7dp"
            android:textStyle="bold"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/buttonshape"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:onClick="mirMosharrofHossain"
             />
        <Button
            android:id="@+id/robindronathTagore_btn"
            android:text="রবীন্দ্রনাথ ঠাকুর"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:layout_margin="7dp"
            android:textStyle="bold"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/buttonshape"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:onClick="robindronathTagore"
             />
        <Button
            android:id="@+id/azizurRahman_btn"
            android:text="কবি আজিজুর রহমান"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:layout_margin="7dp"
            android:textStyle="bold"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/buttonshape"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:onClick="azizurRahman"
             />
        <Button
            android:id="@+id/horinath_btn"
            android:text="কাঙ্গাল হরিনাথ"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:layout_margin="7dp"
            android:textStyle="bold"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/buttonshape"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:onClick="horinath"
            />
        <Button
            android:id="@+id/mohoniMohon_btn"
            android:text="মোহিনী মোহন"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:layout_margin="7dp"
            android:textStyle="bold"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/buttonshape"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:onClick="mohoniMohon"
             />

    </LinearLayout>
</ScrollView>

</RelativeLayout>
